<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="sender">
		<fieldset name="sender"
			label="外送設定">
			<field name="default_sender"
				type="sql"
				query="SELECT CONCAT(id, '-', name) AS sender, name FROM #__schedule_senders"
				key_field="sender"
				value_field="name"
				label="預設外送藥師"
				description="預設外送藥師"
				class=""
				/>

			<field name="default_weekday"
				type="list"
				label="預設外送日"
				description="預設外送日"
				class=""
				>
				<option value="MON">MON</option>
				<option value="TUE">TUE</option>
				<option value="WED">WED</option>
				<option value="THU">THU</option>
				<option value="FRI">FRI</option>
			</field>
		</fieldset>
	</fields>

	<fields name="icrm_api">
		<fieldset name="icrm_api"
			label="iCRM API"
			addfieldpath="administrator/components/com_schedule/model/field"
			>

			<field
				name="host"
				type="text"
				label="URL"
				/>

			<field
				name="username"
				type="text"
				label="Access Username"
				/>

			<field
				name="password"
				type="password"
				label="Access Password"
				/>
		</fieldset>
	</fields>

	<fields name="ihealth_site">
		<fieldset name="ihealth_site"
			label="官網網址"
			>
			<field name="url"
				type="text"
				label="官網網址"
				/>
		</fieldset>
	</fields>

	<fields name="schedule">
		<fieldset name="schedule"
			label="郵件設定"
			>
			<field name="empty_route_mail"
				type="sql"
				query="SELECT CONCAT(`name`, ' &lt;', `email`, '&gt;') AS empty_route_mail, `email` AS `value` FROM #__users"
				multiple="true"
				label="無路線提醒信箱"
				description="無路線提醒信箱"
				/>
		</fieldset>
	</fields>

	<fields name="upload">
		<fieldset name="upload"
			label="上傳設定"
			>
			<field name="base_dir"
				type="text"
				label="上傳資料夾位置"
				description="上傳資料夾位置"
				default="/media/com_schedule/upload"
				/>

			<field name="rx_image_folder"
				type="text"
				label="散客處方箋圖片資料夾名稱"
				description="散客處方箋圖片資料夾名稱"
				default="rx_images"
				/>

			<field name="hospital_rx_sample_folder"
				type="text"
				label="醫院處方箋範本資料夾名稱"
				description="醫院處方箋範本資料夾名稱"
				default="hospital_rx_samples"
				/>
		</fieldset>
	</fields>

	<fields name="s3">
		<fieldset name="s3"
			label="AWS S3 設定"
			>
			<field name="enable"
				type="radio"
				label="開啟 AWS S3 功能"
				description="開啟 AWS S3 功能"
				default="0"
				class="btn-group btn-group-yesno">
				<option value="1">開啟</option>
				<option value="0">關閉</option>
			</field>

			<field name="key"
				type="text"
				label="Key"
				description="Key"
				/>

			<field name="secret"
				type="text"
				label="Secret"
				description="Secret"
				/>

			<field name="bucket"
				type="text"
				label="Bucket Name"
				description="Bucket Name"
				default="ihealth-tw"
				/>

			<field name="region"
				type="list"
				label="Region"
				description="Region"
				default="ap-northeast-1"
				>
				<option value="ap-northeast-1">Tokyo</option>
				<option value="ap-southeast-1">Singapore</option>
			</field>

			<field name="url_prefix"
				type="text"
				label="File URL prefix"
				description="File URL prefix"
				default="https://ihealth-tw-dev.s3-ap-northeast-1.amazonaws.com"
				class="input-xxlarge"
				/>
		</fieldset>
	</fields>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_schedule"
			section="component"
			/>
	</fieldset>
</config>
