<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>

		<field name="customer_id"
			type="text"
			label="對應客戶"
			description="對應客戶id"
			readonly="true"
			/>

		<field name="city"
			type="list"
			label="縣市"
			description="選擇外送縣市"
			required="true"
			class="required"
			>
			<option value="1">台北市</option>
			<option value="2">台中市</option>
			<option value="3">高雄市</option>
		</field>

		<field name="area"
			type="list"
			label="區域"
			description="選擇外送區域"
			required="true"
			class="required"
			>
			<option value="1">文山區</option>
			<option value="2">松山區</option>
			<option value="3">內湖區</option>
		</field>

		<field name="address"
			type="text"
			label="路名"
			description="除了縣市區域以外的地址"
			class="input-xxlarge" />
	</fieldset>
</form>
