<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>

		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			required="true"
			class="input-large required"
			/>

		<field name="hex"
			id="colorpicker"
			type="color"
			default="#eee"
			label="HEX 碼"
			description="顏色HEX碼, ex: #ff0000"
			/>
	</fieldset>
</form>
