<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit"
		align="left"
		horz="true">

		<field name="id"
			type="hidden"
			label=""
			description=""
			required="true"
			class="input-small required"
			/>

		<field name="serial"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_SERIAL"
			description="COM_SCHEDULE_CUSTOMER_SERIAL"
			required="true"
			class="input-small required"
			/>

		<field name="title"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_NAME"
			description="COM_SCHEDULE_CUSTOMER_NAME"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_ID_NUMBER"
			description="COM_SCHEDULE_CUSTOMER_ID_NUMBER"
			/>

		<field name="birth_date"
			type="calendar"
			label="COM_SCHEDULE_CUSTOMER_BIRTH_DATE"
			description="COM_SCHEDULE_CUSTOMER_BIRTH_DATE"
			/>

		<field name="age"
			type="integer"
			label="COM_SCHEDULE_CUSTOMER_AGE"
			description="COM_SCHEDULE_CUSTOMER_AGE"
			class="input-small"
			/>

		<field name="state"
			type="radio"
			label="COM_SCHEDULE_CUSTOMER_STATE"
			description="COM_SCHEDULE_CUSTOMER_STATE"
			class="btn-group btn-group-yesno">
			<option value="0">結案</option>
			<option value="1">服務中</option>
		</field>

	</fieldset>

	<fieldset
		name="contact"
		align="right"
		horz="true">

		<field name="type"
			type="radio"
			label="COM_SCHEDULE_CUSTOMER_TYPE"
			description="COM_SCHEDULE_CUSTOMER_TYPE"
			class="btn-group btn-group-yesno">
			<option value="0">住民</option>
			<option value="1">散客</option>
		</field>

		<field name="institute_title"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_TITLE"
			description="COM_SCHEDULE_INSTITUTE_TITLE"
			/>

		<field name=""
			type="text"
			label="COM_SCHEDULE_CUSTOMER_MEMBER"
			description="COM_SCHEDULE_CUSTOMER_MEMBER"
			class="input-large"
			/>

		<field name="hospital_title"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_HOSPITAL_TITLE"
			description="COM_SCHEDULE_CUSTOMER_HOSPITAL_TITLE"
			class="input-large"
			/>

		<field name="rx_period"
			type="text"
			label="COM_SCHEDULE_RX_PERIOD"
			description="COM_SCHEDULE_RX_PERIOD"
			class="input-large"
			/>

		<field name="rx_time"
			type="list"
			label="COM_SCHEDULE_RX_TIME"
			description="COM_SCHEDULE_RX_TIME">
			<option value="1">第1次</option>
			<option value="2">第2次</option>
			<option value="3">第3次</option>
		</field>

		<field name="note"
			type="textarea"
			label="COM_SCHEDULE_NOTE"
			description="COM_SCHEDULE_NOTE"
			/>

		<fieldset
			name="address"
			>
				<field name="city"
					type="list"
					label="COM_SCHEDULE_EDIT_CITY"
					description=""
					class="pull-left"
					/>

				<field name="area"
					type="list"
					label="COM_SCHEDULE_EDIT_AREA"
					description=""
					class="pull-left"
					/>

				<field name="address"
					type="text"
					label="COM_SCHEDULE_EDIT_ADDRESS"
					description=""
					class="pull-left"
					/>
		</fieldset>

		<fieldset
			name="phones"
			>
			<field name="tel_office"
				type="text"
				label="COM_SCHEDULE_TEL_OFFICE"
				description="COM_SCHEDULE_TEL_OFFICE"
				class="input-large"
			/>

			<field name="tel_home"
				type="text"
				label="COM_SCHEDULE_TEL_HOME"
				description="COM_SCHEDULE_TEL_HOME"
				class="input-large"
				/>

			<field name="mobile"
				type="text"
				label="COM_SCHEDULE_TEL_MOBILE"
				description="COM_SCHEDULE_TEL_MOBILE"
				class="input-large"
				/>
		</fieldset>
	</fieldset>

	<fieldset name="created">
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			/>

		<field name="language"
			type="language"
			label="JGRID_HEADING_LANGUAGE"
			description="JGRID_HEADING_LANGUAGE"
			>
			<option value="*">JALL</option>
		</field>
	</fieldset>

	<!-- Need this field as child of root node for access setting. -->
	<field name="asset_id"
		type="hidden"
		filter="unset"/>

	<fieldset name="rules">
		<field name="rules"
			type="rules"
			translate_label="false"
			class="inputbox"
			filter="rules"
			component="com_schedule"
			section="customer"
			validate="rules"
			/>
	</fieldset>

	<!-- For Quick Ajax AddNew -->
	<fieldset name="quickadd">
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			required="true"
			size="50"
			labelclass=""
			class="input-xlarge"
			/>

		<field name="catid"
			type="category"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_schedule"
			labelclass=""
			>
			<option value="0">COM_SCHEDULE_TITLE_UNCATEGORISED</option>
		</field>

		<!--<field name="parent_id"
			type="customer_list"
			label="COM_SCHEDULE_PARENT_ITEM"
			description="COM_SCHEDULE_PARENT_ITEM_DESC"
			labelclass=""
			class="input-xlarge inputbox"
			access="true"
		>
			<option>JSELECT</option>
			<option value="1">JLIB_HTML_ADD_TO_ROOT</option>
		</field>-->
	</fieldset>

</form>
