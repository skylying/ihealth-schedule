<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_SERIAL_ID"
			description=""
			readonly="true"
			/>

		<field name="name"
			type="text"
			label="客戶姓名"
			description="客戶姓名"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="客戶身份字號"
			description="客戶身份字號"
			/>

		<field name="birth_date"
			type="calendar"
			label="出生日期"
			description="出生日期"
			/>

		<field name="age"
			type="text"
			label="年齡"
			description="年齡"
			class="input-small"
			readonly="true"
			/>

		<field name="state"
			type="radio"
			label="服務狀態"
			description="服務狀態"
			class="btn-group btn-group-yesno">
			<option value="0">結案</option>
			<option value="1">服務中</option>
		</field>
	</fieldset>


	<field name="type"
		type="radio"
		label="客戶類型"
		description="客戶類型"
		class="btn-group btn-group-yesno customertype">
		<option value="resident">住民</option>
		<option value="individual">散客</option>
	</field>


	<fieldset
		name="institute"
		align="right"
		horz="true">

		<field name="institute_id"
			type="institute_list"
			label="機構名稱"
			description="機構名稱"
			class="input-large"
			/>

	</fieldset>

	<fieldset
		name="rxindividual"
		align="right"
		horz="true">

		<field name="members"
			type="member_list"
			value_field="name"
			multiple="true"
			label="所屬會員"
			description="所屬會員"
			class="input-large"
			/>

		<field name="hospital_id"
			type="hospital_list"
			label="開立處方醫院名稱"
			description="開立處方醫院名稱"
			class="input-large"
			/>

		<field name="rx_period"
			type="list"
			label="給藥天數"
			description="給藥天數">
			<option value="21">21天</option>
			<option value="28">28天</option>
			<option value="30">30天</option>
			<option value="31">31天</option>
		</field>

		<field name="rx_time"
			type="list"
			label="可調劑次數"
			description="可調劑次數">
			<option value="1">1次</option>
			<option value="2">2次</option>
			<option value="3">3次</option>
		</field>

		<field name="note"
			type="textarea"
			label="備註"
			description="備註"
			/>
	</fieldset>

	<fieldset name="address">
		<field name="city"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_cities"
			key_field="id"
			value_field="title"
			label="縣市"
			description="縣市"
			readonly="false"
			>
			<option></option>
		</field>

		<field name="area"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_areas"
			key_field="id"
			value_field="title"
			label="區域"
			description="區域"
			readonly="false"
			>
			<option></option>
		</field>

		<field name="address"
			type="text"
			label="地址"
			description=""
			class="pull-left"
			/>
	</fieldset>

	<fieldset name="office">
		<field name="tel_office"
			type="radioinput"
			label="宅配電話(O)"
			description="填入宅配電話"
			class="input-large"
			/>

	</fieldset>

	<fieldset name="home">
		<field name="tel_home"
			type="radioinput"
			label="宅配電話(H)"
			description="填入宅配電話(H)"
			class="input-large"
			/>

	</fieldset>

	<fieldset name="mobile">
		<field name="mobile"
			type="radioinput"
			label="手機(M)"
			description="填入手機(M)"

			class="input-large"
			/>

	</fieldset>

</form>
