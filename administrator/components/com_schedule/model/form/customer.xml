<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_SERIAL_ID"
			description=""
			readonly="true"
			/>

		<field name="name"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_NAME"
			description="COM_SCHEDULE_CUSTOMER_NAME"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_ID_NUMBER"
			description="COM_SCHEDULE_CUSTOMER_ID_NUMBER"
			/>

		<field name="birth_date"
			type="calendar"
			label="COM_SCHEDULE_CUSTOMER_BIRTH_DATE"
			description="COM_SCHEDULE_CUSTOMER_BIRTH_DATE"
			/>

		<field name="age"
			type="text"
			label="COM_SCHEDULE_CUSTOMER_AGE"
			description="COM_SCHEDULE_CUSTOMER_AGE"
			class="input-small"
			readonly="true"
			/>

		<field name="state"
			type="radio"
			label="COM_SCHEDULE_CUSTOMER_STATE"
			description="COM_SCHEDULE_CUSTOMER_STATE"
			class="btn-group btn-group-yesno">
			<option value="0">結案</option>
			<option value="1">服務中</option>
		</field>
	</fieldset>


	<field name="type"
		type="radio"
		label="COM_SCHEDULE_CUSTOMER_TYPE"
		description="COM_SCHEDULE_CUSTOMER_TYPE"
		class="btn-group btn-group-yesno customertype">
		<option value="resident">住民</option>
		<option value="individual">散客</option>
	</field>


	<fieldset
		name="institute"
		align="right"
		horz="true">

		<field name="institute_id"
			type="institute_list"
			label="機構名稱"
			description="機構名稱"
			class="input-large"
			/>

	</fieldset>

	<fieldset
		name="rxindividual"
		align="right"
		horz="true">

		<field name="members"
			type="member_list"
			value_field="name"
			multiple="true"
			label="COM_SCHEDULE_CUSTOMER_MEMBER"
			description="COM_SCHEDULE_CUSTOMER_MEMBER"
			class="input-large"
			/>

		<field name="hospital_id"
			type="hospital_list"
			label="COM_SCHEDULE_CUSTOMER_HOSPITAL_TITLE"
			description="COM_SCHEDULE_CUSTOMER_HOSPITAL_TITLE"
			class="input-large"
			/>

		<field name="rx_period"
			type="list"
			label="COM_SCHEDULE_RX_PERIOD"
			description="COM_SCHEDULE_RX_PERIOD">
			<option value="21">21天</option>
			<option value="28">28天</option>
			<option value="30">30天</option>
			<option value="31">31天</option>
		</field>

		<field name="rx_time"
			type="list"
			label="COM_SCHEDULE_RX_TIME"
			description="COM_SCHEDULE_RX_TIME">
			<option value="1">1次</option>
			<option value="2">2次</option>
			<option value="3">3次</option>
		</field>

		<field name="note"
			type="textarea"
			label="COM_SCHEDULE_NOTE"
			description="COM_SCHEDULE_NOTE"
			/>
	</fieldset>

	<fieldset name="address">
		<field name="city"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_cities"
			key_field="id"
			value_field="title"
			label="縣市"
			description="縣市"
			readonly="false"
			>
			<option></option>
		</field>

		<field name="area"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_areas"
			key_field="id"
			value_field="title"
			label="區域"
			description="區域"
			readonly="false"
			>
			<option></option>
		</field>

		<field name="address"
			type="text"
			label="COM_SCHEDULE_EDIT_ADDRESS"
			description=""
			class="pull-left"
			/>
	</fieldset>

	<fieldset name="phones">
		<field name="tel_office"
			type="text"
			label="COM_SCHEDULE_TEL_OFFICE"
			description="COM_SCHEDULE_TEL_OFFICE"
			class="input-large"
			/>

		<field name="tel_home"
			type="text"
			label="COM_SCHEDULE_TEL_HOME"
			description="COM_SCHEDULE_TEL_HOME"
			class="input-large"
			/>

		<field name="mobile"
			type="text"
			label="COM_SCHEDULE_TEL_MOBILE"
			description="COM_SCHEDULE_TEL_MOBILE"
			class="input-large"
			/>
	</fieldset>
</form>
