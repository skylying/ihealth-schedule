<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			label="客戶編號"
			description=""
			readonly="true"
			/>

		<field name="name"
			type="text"
			label="客戶姓名"
			description="客戶姓名"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="客戶身份字號"
			description="客戶身份字號"
			/>

		<field name="birth_date"
			type="DateTimePicker"
			class="datetimepicker calendarwidth birthday"
			label="出生日期"
			description="出生日期"
			/>

		<field name="age"
			type="text"
			label="年齡 (實歲)"
			description="年齡"
			readonly="true"
			/>

		<field name="state"
			type="radio"
			label="服務狀態"
			description="服務狀態"
			default="1"
			class="btn-group btn-group-yesno">
			<option value="0">結案</option>
			<option value="1">服務中</option>
		</field>
	</fieldset>


	<field name="type"
		type="radio"
		label="客戶類型"
		description="客戶類型"
		class="btn-group btn-group-yesno customertype">
		<option value="resident">住民</option>
		<option value="individual">散客</option>
	</field>


	<fieldset
		name="institute"
		align="right"
		horz="true">

		<field name="institute_id"
			type="institute_list"
			value_field="short_title"
			label="機構名稱"
			description="機構名稱"
			class="input-large"
			/>

	</fieldset>

	<fieldset
		name="rxindividual"
		align="right"
		horz="true">

		<field name="members"
			type="member_list"
			value_field="name"
			multiple="true"
			label="所屬會員"
			description="所屬會員"
			class="input-large"
			/>

		<field name="hospital_id"
			type="hospital_list"
			label="開立處方醫院名稱"
			description="開立處方醫院名稱"
			class="input-large"
			/>

		<field name="rx_period"
			type="list"
			label="給藥天數"
			description="給藥天數">
			<option value="21">21天</option>
			<option value="28">28天</option>
			<option value="30">30天</option>
			<option value="31">31天</option>
		</field>

		<field name="rx_time"
			type="list"
			label="可調劑次數"
			description="可調劑次數">
			<option value="1">1次</option>
			<option value="2">2次</option>
			<option value="3">3次</option>
		</field>

		<field name="note"
			type="textarea"
			label="備註"
			description="備註"
			/>
	</fieldset>

	<fieldset name="address">
		<!--These hidden form are for the purpose of form data required-->
		<field name="city"
			type="hidden"
			description="散客外送縣市"
			>
		</field>

		<field name="area"
			type="hidden"
			description="散客外送區域"
			>
		</field>

		<field name="address"
			type="hidden"
			description="對應地址(json)"
			/>
		<!--These hidden form are for the purpose of form data required-->
	</fieldset>


	<fieldset name="office">
		<field name="tel_office"
			type="radioinput"
			rows="3"
			label="宅配電話 (Office)"
			description="填入宅配電話"
			class="input-large"
			/>

	</fieldset>

	<fieldset name="home">
		<field name="tel_home"
			type="radioinput"
			rows="3"
			label="宅配電話 (Home)"
			description="填入宅配電話(H)"
			class="input-large"
			/>

	</fieldset>


	<fieldset name="mobile">
		<field name="mobile"
			type="radioinput"
			rows="3"
			label="手機號碼"
			description="填入手機"

			class="input-large"
			/>

	</fieldset>

	<fieldset name="quickadd">
		<field name="name"
			type="text"
			label="客戶姓名"
			description="客戶姓名"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="客戶身份證字號"
			description="客戶身份證字號"
			/>

		<field name="birth_date"
			type="calendar"
			label="出生日期"
			description="出生日期"
			/>

		<field name="type"
			type="radio"
			label="客戶類型"
			description="客戶類型"
			default="individual"
			class="btn-group btn-group-yesno">
			<option value="resident">住民</option>
			<option value="individual">散客</option>
		</field>
	</fieldset>
</form>
