<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="search">
		<field name="field"
			type="hidden"
			default="*"
			label="JSEARCH_FILTER_LABEL"
			labelclass="pull-left"
			class="input-small"
			>
			<option value="*">JALL</option>
			<option value="customer.title">JGLOBAL_TITLE</option>
			<option value="category.title">JCATEGORY</option>
		</field>

		<field
			name="index"
			type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
			/>

		<!-- For multiple search
		<fieldset name="multisearch">
			<field
				name="customer.title"
				type="text"
				label="Title"
				hint="JSEARCH_FILTER"
				/>

			<field
				name="category.title"
				type="text"
				label="Category"
				hint="JSEARCH_FILTER"
				/>
		</fieldset>
		-->
	</fields>

	<!-- Filter -->
	<fields name="filter">
		<field
			type="note"
			label="COM_SCHEDULE_FILTER_NOTE_GENERAL"
			class="filter-title"
			/>

		<field
			name="customer.type"
			type="list"
			label="COM_SCHEDULE_CUSTOMER_FILTER_TYPE"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇類別</option>
			<option value="1">散客</option>
			<option value="0">住民</option>
		</field>

		<field
			name=""
			type="list"
			label="COM_SCHEDULE_CUSTOMER_FILTER_INSTITUTE"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇</option>
		</field>

		<field
			name="customer.city_title"
			type="list"
			query=""
			label="COM_SCHEDULE_CUSTOMER_FILTER_CITY_TITLE"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇</option>
		</field>

		<field
			name="customer.area_title"
			type="list"
			query=""
			label="COM_SCHEDULE_CUSTOMER_FILTER_AREA_TITLE"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇</option>
		</field>

		<field
			name="customer.age"
			type="input"
			label="COM_SCHEDULE_CUSTOMER_FILTER_AGE_FROM"
			default=""
			onchange="this.form.submit();"
			/>

		<field
			name=""
			type="input"
			label="COM_SCHEDULE_CUSTOMER_FILTER_AGE_TO"
			default=""
			onchange="this.form.submit();"
			/>

		<field
			name="customer.state"
			type="list"
			query=""
			label="COM_SCHEDULE_CUSTOMER_FILTER_STATE"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇</option>
		</field>

		<!--
		<field
			name="customer.catid"
			type="category"
			default=""
			label="JCATEGORY"
			extension="com_schedule"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>JOPTION_SELECT_CATEGORY</option>
		</field>
		-->
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="customer.catid, customer.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="customer.catid, customer.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="customer.state ASC">JSTATUS_ASC</option>
			<option value="customer.state DESC">JSTATUS_DESC</option>
			<option value="customer.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="customer.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category.title ASC">JCATEGORY_ASC</option>
			<option value="category.title DESC">JCATEGORY_DESC</option>
			<option value="customer.access ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="customer.access DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="customer.created_by ASC">JAUTHOR_ASC</option>
			<option value="customer.created_by DESC">JAUTHOR_DESC</option>
			<option value="customer.language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="customer.language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="customer.created ASC">JDATE_ASC</option>
			<option value="customer.created DESC">JDATE_DESC</option>
			<option value="customer.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="customer.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>