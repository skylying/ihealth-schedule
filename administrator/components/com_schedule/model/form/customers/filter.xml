<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="search">
		<field name="field"
			type="hidden"
			default="*"
			label="JSEARCH_FILTER_LABEL"
			labelclass="pull-left"
			class="input-small"
			>
			<option value="*">JALL</option>
			<option value="customer.name">客戶姓名</option>
		</field>

		<field
			name="index"
			type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
			/>

		<!-- For multiple search
		<fieldset name="multisearch">
			<field
				name="customer.title"
				type="text"
				label="Title"
				hint="JSEARCH_FILTER"
				/>

			<field
				name="category.title"
				type="text"
				label="Category"
				hint="JSEARCH_FILTER"
				/>
		</fieldset>
		-->
	</fields>

	<!-- Filter -->
	<fields name="filter">
		<field
			name="customer.type"
			type="list"
			label="客戶類別"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇客戶類別</option>
			<option value="individual">散客</option>
			<option value="resident">住民</option>
		</field>

		<field name="customer.institute_id"
			type="select2"
			class="input-large"
			label="機構名稱"
			description="機構名稱"
			hint="輸入機構名稱"
			minimumInputLength="1"
			apiUrl="index.php?option=com_schedule&amp;task=institutes.search.json"
			apiQueryKey="filter_search"
			query="SELECT `id`, `short_title` FROM #__schedule_institutes WHERE `id` = '%s'"
			idField="id"
			textField="short_title"
			allowClear="true"
			onchange="filterInstituteOnChange();"
			/>

		<field
			name="customer.city"
			type="sql"
			query="SELECT id,title FROM #__schedule_cities"
			key_field="id"
			value_field="title"
			label="選擇縣市"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇縣市</option>
		</field>

		<field
			name="customer.area"
			type="sql"
			query="SELECT id,title FROM #__schedule_areas"
			key_field="id"
			value_field="title"
			label="選擇區域"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇區域</option>
		</field>

		<field
			name="customers.age_start"
			type="input"
			label="年齡(從)"
			default=""
			hint="輸入年齡(從)"
			/>

		<field
			name="customers.age_end"
			type="input"
			label="年齡(到)"
			default=""
			hint="輸入年齡(到)"
			onchange="this.form.submit();"
			/>

		<field
			name="customer.state"
			type="list"
			query=""
			label="服務狀態"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>選擇狀態</option>
			<option value="0">結案</option>
			<option value="1">服務中</option>
		</field>

		<!--
		<field
			name="customer.catid"
			type="category"
			default=""
			label="JCATEGORY"
			extension="com_schedule"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>JOPTION_SELECT_CATEGORY</option>
		</field>
		-->
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="customer.id ASC">依編號升序排列</option>
			<option value="customer.id DESC">依編號降序排列</option>
			<option value="customer.type ASC">依類別升序排列</option>
			<option value="customer.type DESC">依類別降序排列</option>
			<option value="customer.name ASC">依姓名升序排列</option>
			<option value="customer.name DESC">依姓名降序排列</option>
			<option value="customer.id_number ASC">依身份證字號升序排列</option>
			<option value="customer.id_number DESC">依身份證字號降序排列</option>
			<option value="customer.age ASC">依年齡升序排列</option>
			<option value="customer.age DESC">依年齡降序排列</option>
			<option value="customer.city_title ASC">依外送縣市升序排列</option>
			<option value="customer.city_title DESC">依外送縣市降序排列</option>
			<option value="customer.area_title ASC">依外送區域升序排列</option>
			<option value="customer.area_title DESC">依外送區域降序排列</option>
			<option value="customer.state ASC">依狀態升序排列</option>
			<option value="customer.state DESC">依狀態降序排列</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>