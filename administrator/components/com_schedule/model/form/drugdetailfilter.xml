<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="filter">
		<field name="date_start"
			type="datetimepicker"
			label="預計外送日(起)"
			description="預計外送日(起)"
			/>

		<field name="date_end"
			type="datetimepicker"
			label="預計外送日(屹)"
			description="預計外送日(屹)"
			/>

		<field name="weekday"
			type="list"
			label="星期幾"
			description=""
			>
			<option value="*">- 請選擇星期幾 -</option>
			<option value="MON">星期一</option>
			<option value="TUE">星期二</option>
			<option value="WED">星期三</option>
			<option value="THU">星期四</option>
			<option value="FRI">星期五</option>
		</field>

		<field name="senderIds"
			type="itemscheckboxes"
			option_title="name"
			table="#__schedule_senders"
			multiple="true"
			default_check="all"
			label="選擇外送藥師"
			description="選擇外送藥師"
			/>
	</fieldset>
</form>
