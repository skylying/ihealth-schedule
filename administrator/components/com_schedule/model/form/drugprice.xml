<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>

		<field name="institute_id"
			type="institute_list"
			value_field="title"
			key_field="id"
			label="藥品所屬機構"
			description="要加購藥品的機構名稱"
			/>

		<field name="customer_id"
			type="customer_list"
			value_field="name"
			key_field="id"
			label="藥品所屬客戶"
			description="要加購藥品的客戶"
			/>

		<field name="date"
			type="calendar"
			label="對應日期"
			description="對應的排程日期"
			/>

		<field name="price"
			type="text"
			label="單筆金額"
			description="單一一種藥品的總額"
			/>
	</fieldset>
</form>
