<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="COM_SCHEDULE_HOSPITAL_ITEM_ID"
			description="COM_SCHEDULE_HOSPITAL_ITEM_ID"
			readonly="true"
			class="readonly"
			/>
		<field name="title"
			type="text"
			label="COM_SCHEDULE_HOSPITAL_ITEM_TITLE"
			description="COM_SCHEDULE_HOSPITAL_ITEM_TITLE"
			required="true"
			class="input-xlarge required"
			/>
		<field name="has_hicode"
			type="radio"
			class="btn-group btn-group-yesno"
			label="COM_SCHEDULE_HOSPITAL_ITEM_HICODE"
			description="COM_SCHEDULE_HOSPITAL_ITEM_HICODE_DES"
			default="0"
			required="true">
			<option value="0">無</option>
			<option value="1">有</option>
		</field>
		<field name="title"
			type="text"
			label="COM_SCHEDULE_HOSPITAL_ITEM_TITLE"
			description="COM_SCHEDULE_HOSPITAL_ITEM_TITLE"
			class="input-xlarge required"
			/>
		<field name="city"
			type="list"
			label="COM_SCHEDULE_HOSPITAL_ITEM_CITY_TITLE"
			description="COM_SCHEDULE_HOSPITAL_ITEM_CITY_TITLE">
			<option>- 請選擇縣市 -</option>
			<option value="1">台北市</option>
			<option value="2">新北市</option>
			<option value="3">台中市</option>
			<option value="4">高雄市</option>
			<option value="5">台灣市</option>
		</field>
		<field name="city_title"
			type="hidden"
			label="縣市標題"
			description="標題" />
		<field name="area"
			type="list"
			label="COM_SCHEDULE_HOSPITAL_ITEM_AREA"
			description="COM_SCHEDULE_HOSPITAL_ITEM_AREA">
			<option>- 請選擇區域 -</option>
			<option value="1">大同區</option>
			<option value="2">中正區</option>
			<option value="3">阿瑪茸區</option>
			<option value="4">天龍區</option>
			<option value="5">三角洲區</option>
		</field>
		<field name="area_title"
			type="hidden"
			label="COM_SCHEDULE_HOSPITAL_ITEM_AREA_TITLE"
			description="COM_SCHEDULE_HOSPITAL_ITEM_AREA_TITLE" />
		<field name="images"
				type="file"
				label="COM_SCHEDULE_HOSPITAL_ITEM_IMAGE"
				description="COM_SCHEDULE_HOSPITAL_ITEM_IMAGE"
				size="40"
				class="inputbox"/>
	</fieldset>
</form>
