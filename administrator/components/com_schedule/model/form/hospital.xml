<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="醫院編號"
			description="醫院編號"
			readonly="true"
			class="readonly"
			/>

		<field name="title"
			type="text"
			label="醫院名稱"
			description="醫院名稱"
			required="true"
			class="input-xlarge required"
			/>

		<field name="has_hicode"
			type="radio"
			class="btn-group btn-group-yesno"
			label="藥品健保碼"
			description="藥品健保碼"
			default="0"
			required="true">
			<option value="0">無</option>
			<option value="1">有</option>
		</field>

		<field name="title"
			type="text"
			label="醫院名稱"
			description="醫院名稱"
			class="input-xlarge required"
			/>

		<field name="city"
			type="sql"
			query="SELECT id,title FROM #__schedule_cities"
			key_field="id"
			value_field="title"
			label="醫院所在縣市"
			description="醫院所在縣市">
			<option>- 請選擇縣市 -</option>
		</field>

		<field name="city_title"
			type="hidden"
			label="縣市標題"
			description="標題" />

		<field name="area"
			type="sql"
			query="SELECT id,title FROM #__schedule_areas"
			key_field="id"
			value_field="title"
			label="醫院所在區域"
			description="醫院所在區域">
			<option>- 請選擇區域 -</option>
		</field>

		<field name="area_title"
			type="hidden"
			label="區域名稱"
			description="區域名稱" />

		<field name="ajax_image1"
			type="image"
			imageType="hospital"
			label="預約用處方箋"
			description="預約用處方箋" />

		<field name="ajax_image2"
			type="image"
			imageType="hospital"
			label="自行填表用處方箋"
			description="自行填表用處方箋" />
	</fieldset>
</form>
