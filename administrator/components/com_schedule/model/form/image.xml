<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>

		<field name="rx_id"
			type="_list"
			value_field="id"
			key_field="id"
			label="對應處方箋"
			description="對應處方箋 id"
			/>

		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			required="true"
			class="input-large"
			/>

		<field name="path"
			type="finder"
			label="檔案位址"
			description="儲存檔案的路徑"
			class="input-large"
			/>
	</fieldset>
</form>
