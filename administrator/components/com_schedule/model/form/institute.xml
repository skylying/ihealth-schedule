<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="serial"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_SERIAL"
			description="COM_SCHEDULE_INSTITUTE_SERIAL"
			class="input-xxlarge required"
			/>

		<field name="title"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_TITLE"
			description="COM_SCHEDULE_INSTITUTE_TITLE"
			class="input-xxlarge required"
			/>

		<field name="short_title"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_SHORT_TITLE"
			description="COM_SCHEDULE_INSTITUTE_SHORT_TITLE"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="tel"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_TEL"
			description="COM_SCHEDULE_INSTITUTE_TEL"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="fax"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_FAX"
			description="COM_SCHEDULE_INSTITUTE_FAX"
			class="input-xxlarge required"
			/>

		<field name="city"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_CITY"
			description="COM_SCHEDULE_INSTITUTE_CITY"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="area"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_AREA"
			description="COM_SCHEDULE_INSTITUTE_AREA"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="address"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_ADDRESS"
			description="COM_SCHEDULE_INSTITUTE_ADDRESS"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="sender_name"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_SENDER_NAME"
			description="COM_SCHEDULE_INSTITUTE_SENDER_NAME"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="delivery_weekday"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_DELIVERY_WEEKDAY"
			description="COM_SCHEDULE_INSTITUTE_DELIVERY_WEEKDAY"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="color_hex"
			type="text"
			label="COM_SCHEDULE_INSTITUTE_MARK_COLOR"
			description="COM_SCHEDULE_INSTITUTE_MARK_COLOR"
			required="true"
			class="input-xxlarge required"
			/>

		<field name="note"
			type="textarea"
			label="COM_SCHEDULE_INSTITUTE_NOTE"
			description="COM_SCHEDULE_INSTITUTE_NOTE"
			class="input-xxlarge required"
			/>

	</fieldset>

	<!-- For Quick Ajax AddNew -->
	<fieldset name="quickadd">
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			required="true"
			size="50"
			labelclass=""
			class="input-xlarge"
			/>

		<field name="catid"
			type="category"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_schedule"
			labelclass=""
			>
			<option value="0">COM_SCHEDULE_TITLE_UNCATEGORISED</option>
		</field>

		<!--<field name="parent_id"
			type="institute_list"
			label="COM_SCHEDULE_PARENT_ITEM"
			description="COM_SCHEDULE_PARENT_ITEM_DESC"
			labelclass=""
			class="input-xlarge inputbox"
			access="true"
		>
			<option>JSELECT</option>
			<option value="1">JLIB_HTML_ADD_TO_ROOT</option>
		</field>-->
	</fieldset>

</form>
