<?xml version="1.0" encoding="utf-8"?>
<form>
	<!-- Batch -->
	<fields name="batch">

		<field name="delivery_weekday"
			type="list"
			label="COM_SCHEDULE_INSTITUTE_DELIVERY_WEEKDAY"
			description="COM_SCHEDULE_INSTITUTE_DELIVERY_WEEKDAY"
			class="input-xxlarge required"
			>
			<option></option>
			<option value="MON">MON</option>
			<option value="TUE">TUE</option>
			<option value="WED">WED</option>
			<option value="THU">THU</option>
			<option value="FRI">FRI</option>
			<option value="SAT">SAT</option>
			<option value="SUN">SUN</option>
		</field>

		<field name="sender_id"
			type="sender_list"
			value_field="name"
			key_field="id"
			label="COM_SCHEDULE_INSTITUTE_SENDER_NAME"
			description="COM_SCHEDULE_INSTITUTE_SENDER_NAME"
			class="input-xxlarge required"
			>
			<option></option>
		</field>

		<field name="color_id"
			type="color_list"
			value_field="title"
			key_field="id"
			label="COM_SCHEDULE_INSTITUTE_MARK_COLOR"
			description="COM_SCHEDULE_INSTITUTE_MARK_COLOR"
			class="input-xxlarge required"
			>
			<option></option>
		</field>

		<field name="task"
			type="radio"
			label="JLIB_RULES_ACTION"
			description=""
			labelclass="control-label"
			class="combo btn-group"
			default="institutes.batch.move"
			>
			<option value="institutes.batch.move">JLIB_HTML_BATCH_MOVE</option>
			<option value="institutes.batch.copy">JLIB_HTML_BATCH_COPY</option>
		</field>
	</fields>
</form>