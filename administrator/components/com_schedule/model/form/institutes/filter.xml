<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="search">
		<field name="field"
			type="hidden"
			default="*"
			label="JSEARCH_FILTER_LABEL"
			labelclass="pull-left"
			class="input-small"
			>
			<option value="*">JALL</option>
			<option value="institute.title">JGLOBAL_TITLE</option>
			<option value="institute.short_title">COM_SCHEDULE_INSTITUTE_SHORT_TITLE</option>
		</field>

		<field
			name="index"
			type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
			/>

		<!-- For multiple search
		<fieldset name="multisearch">
			<field
				name="institute.title"
				type="text"
				label="Title"
				hint="JSEARCH_FILTER"
				/>

			<field
				name="category.title"
				type="text"
				label="Category"
				hint="JSEARCH_FILTER"
				/>
		</fieldset>
		-->
	</fields>

	<!-- Filter -->
	<fields name="filter">
		<field
			type="note"
			label="COM_SCHEDULE_FILTER_NOTE_GENERAL"
			class="filter-title"
			/>

		<field
			name="institute.delivery_weekday"
			type="list"
			label="COM_SCHEDULE_INSTITUTE_DELIVERY_WEEKDAY"
			default=""
			onchange="this.form.submit();"
			>
			<option></option>
			<option>COM_SCHEDULE_INSTITUTE_SELECT_DELIVERY_WEEKDAY</option>
			<option value="MON">MON</option>
			<option value="TUE">TUE</option>
			<option value="WED">WED</option>
			<option value="THU">THU</option>
			<option value="FRI">FRI</option>
			<option value="SAT">SAT</option>
			<option value="SUN">SUN</option>
		</field>

		<field
			name="institute.city_title"
			type="sql"
			query="SELECT title FROM #__schedule_cities"
			key_field="title"
			value_field="title"
			default=""
			label="COM_SCHEDULE_INSTITUTE_CITY"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>COM_SCHEDULE_INSTITUTE_SELECT_CITY</option>
		</field>

		<field
			name="institute.area_title"
			type="sql"
			query="SELECT title FROM #__schedule_areas"
			key_field="title"
			value_field="title"
			default=""
			label="COM_SCHEDULE_INSTITUTE_AREA"
			onchange="this.form.submit();"
			>
			<option></option>
			<option>COM_SCHEDULE_INSTITUTE_SELECT_AREA</option>
		</field>

	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="institute.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="institute.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="institute.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>