<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="COM_SCHEDULE_MEMBER_ITEM_ID"
			description="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
			/>

		<field name="name"
			type="text"
			label="COM_SCHEDULE_MEMBER_ITEM_NAME"
			description="COM_SCHEDULE_MEMBER_ITEM_NAME"
			required="true"
			class="input-xlarge required"
			/>

		<field name="email"
			type="email"
			label="COM_SCHEDULE_MEMBER_ITEM_EMAIL"
			description="COM_SCHEDULE_MEMBER_ITEM_EMAIL"
			required="true"
			default=" "
			class="input-xlarge"
			/>

		<field name="password"
			type="password"
			autocomplete="off"
			class="validate-password input-xlarge"
			filter="raw"
			label="JGLOBAL_PASSWORD"
			description="JGLOBAL_PASSWORD"
			validate="password"
			/>
		<field name="password2"
			type="password"
			autocomplete="off"
			class="validate-password input-xlarge"
			field="password"
			filter="raw"
			label="COM_SCHEDULE_MEMBER_ITEM__PASSWORD2_LABEL"
			description="COM_SCHEDULE_MEMBER_ITEM__PASSWORD2_LABEL"
			preview="true"
			validate="equals"
			/>

		<field name="tel"
			type="tel"
			label="COM_SCHEDULE_MEMBER_ITEM_TEL"
			description="COM_SCHEDULE_MEMBER_TEL"
			class="input-xlarge"
			/>
		<field name="customers"
			type="customer_list"
			label="Customer"
			value_field="name"
			multiple="true"
			>
		</field>
	</fieldset>
		<!--<field name="parent_id"
			type="member_list"
			label="COM_SCHEDULE_PARENT_ITEM"
			description="COM_SCHEDULE_PARENT_ITEM_DESC"
			labelclass=""
			class="input-xlarge inputbox"
			access="true"
		>
			<option>JSELECT</option>
			<option value="1">JLIB_HTML_ADD_TO_ROOT</option>
		</field>-->
</form>
