<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>

		<field name="city"
			type="sql"
			query="SELECT id AS value, title AS title FROM #__schedule_cities"
			value_field="title"
			key_field="value"
			label="縣市"
			description="選擇外送縣市"
			required="true"
			class="required"
			>
		</field>

		<field name="area"
			type="sql"
			query="SELECT id AS value, title AS title FROM #__schedule_areas"
			value_field="title"
			key_field="value"
			label="區域"
			description="選擇外送區域"
			required="true"
			class="required"
			>
		</field>

		<field name="weekday"
			type="list"
			label="外送日"
			description="選擇外送日"
			>
			<option value="MON">MON</option>
			<option value="TUE">TUE</option>
			<option value="WED">週三</option>
			<option value="THU">週四</option>
			<option value="FRI">週五</option>
		</field>

		<field name="sender_id"
			type="sender_list"
			value_field="name"
			label="外送藥師"
			description="選擇外送藥師"
			>
		</field>
	</fieldset>
</form>
