		<!-- 存入 prescription 的備註 -->
		<field
			name="note"
			type="textarea"
			label="備註"
			description="備註"
			/>

		<field
			name="note_list"
			type="checkboxes"
			label="註記選項"
			description="註記選項"
			>
			<option value="need_real_book">需確認正本</option>
			<option value="need_breakup">藥品需分包</option>
			<option value="take_it_back">正本已回收</option>
