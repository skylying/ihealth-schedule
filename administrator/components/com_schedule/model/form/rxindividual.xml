<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="basic"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			label="處方箋編號"
			description="處方箋編號"
			readonly="true"
			/>

		<field name="id_number"
			type="text"
			label="身分證字號"
			description="身分證字號"
			/>

		<field name="customer_id"
			type="customer_rxlist"
			label="客戶姓名"
			description="客戶姓名"
			customer="individual"
			key_field="id"
			value_field="name"
			quickadd="true"
			/>

		<field name="birth_date"
			type="calendar"
			label="生日"
			description="生日"
			/>

		<field name="received"
			type="radio"
			label="處方箋狀態"
			description="處方箋狀態"
			class="btn-group"
			>
			<option value="1">已取得</option>
			<option value="0">未取得</option>
		</field>

		<field name="called"
			type="radio"
			label="電聯狀態"
			description="電聯狀態"
			class="btn-group"
			>
			<option value="1">已電聯</option>
			<option value="0">未電聯</option>
		</field>

		<field name="hospital_id"
			type="hospital_list"
			label="處方開立醫院"
			description="處方開立醫院"
			>
			<option></option>
		</field>

		<field name="see_dr_date"
			type="calendar"
			label="就醫日期"
			description="就醫日期"
			/>

		<field name="period"
			type="list"
			label="給藥天數"
			description="給藥天數"
			default="28"
		>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
			<option value="24">24</option>
			<option value="25">25</option>
			<option value="26">26</option>
			<option value="27">27</option>
			<option value="28">28</option>
			<option value="29">29</option>
			<option value="30">30</option>
			<option value="31">31</option>
		</field>

		<field name="times"
			type="list"
			label="可調劑次數"
			description="可調劑次數"
			default="2"
			>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
		</field>

		<field name="method"
			type="list"
			label="處方箋取得方式"
			description="處方箋取得方式"
			>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
		</field>

		<field name="drug"
			type="hidden"
			/>

		<field name="rximages"
			type="file"
			label="處方箋檔案"
			description="處方箋檔案"
			multiple="multiple"
			/>

		<field name="remove_images"
			type="itemscheckboxes"
			table="#__schedule_images"
			id_key="id"
			where_item_id="rx_id"
			value_field="id"
			option_title="title"
			select="id, title"
			label="刪除圖片"
			description="刪除圖片"
			/>

		<field name="create_address"
			type="hidden"
			/>
	</fieldset>

	<field name="deliver_nths"
		type="hidden"
		>
	</field>

	<fields name="schedules_1st">
		<field name="deliver_nth"
			type="checkboxes"
			label="宅配第幾次"
			description="宅配第幾次"
			>
			<option value="1st">第一次</option>
		</field>

		<field
			name="address_id"
			type="text"
			label="地址"
			description="地址"
			/>

		<field name="drug_empty_date"
			type="calendar"
			label="吃完藥日"
			description="吃完藥日"
			/>

		<field
			name="date"
			type="calendar"
			label="預約宅配日"
			description="預約宅配日"
			/>

		<field
			name="session"
			type="list"
			label="時段"
			description="時段"
			>
			<option value="daytime">白天皆可 0900-1800</option>
			<option value="morning">早上 0900-1300</option>
			<option value="afternoon">下午 1300-1800</option>
			<option value="night">晚上 1800-2100</option>
			<option value="other">其他</option>
		</field>

		<field
			name="schedule_id"
			type="hidden"
			/>

		<field
			name="sender_id"
			type="sender_list"
			value_field="name"
			label="配送藥師"
			description="配送藥師"
			/>

		<field
			name="weekday"
			type="list"
			label="配送日"
			description="配送日"
			>
			<option value="MON">星期一</option>
			<option value="TUE">星期二</option>
			<option value="WED">星期三</option>
			<option value="THU">星期四</option>
			<option value="FRI">星期五</option>
			<option value="SAT">星期六</option>
			<option value="SUN">星期日</option>
		</field>
	</fields>

	<fields name="schedules_2nd">
		<field name="deliver_nth"
			type="checkboxes"
			label="宅配第幾次"
			description="宅配第幾次"
			>
			<option value="2nd">第二次</option>
		</field>

		<field
			name="address_id"
			type="text"
			label="地址"
			description="地址"
			/>

		<field name="drug_empty_date"
			type="calendar"
			label="吃完藥日"
			description="吃完藥日"
			/>

		<field
			name="date"
			type="calendar"
			label="預約宅配日"
			description="預約宅配日"
			/>

		<field
			name="session"
			type="list"
			label="時段"
			description="時段"
			>
			<option value="daytime">白天皆可 0900-1800</option>
			<option value="morning">早上 0900-1300</option>
			<option value="afternoon">下午 1300-1800</option>
			<option value="night">晚上 1800-2100</option>
			<option value="other">其他</option>
		</field>

		<field
			name="schedule_id"
			type="hidden"
			/>

		<field
			name="sender_id"
			type="sender_list"
			value_field="name"
			label="配送藥師"
			description="配送藥師"
			/>

		<field
			name="weekday"
			type="list"
			label="配送日"
			description="配送日"
			>
			<option value="MON">星期一</option>
			<option value="TUE">星期二</option>
			<option value="WED">星期三</option>
			<option value="THU">星期四</option>
			<option value="FRI">星期五</option>
			<option value="SAT">星期六</option>
			<option value="SUN">星期日</option>
		</field>
	</fields>

	<fields name="schedules_3rd">
		<field name="deliver_nth"
			type="checkboxes"
			label="宅配第幾次"
			description="宅配第幾次"
			>
			<option value="3rd">第三次</option>
		</field>

		<field
			name="address_id"
			type="text"
			label="地址"
			description="地址"
			/>

		<field name="drug_empty_date"
			type="calendar"
			label="吃完藥日"
			description="吃完藥日"
			/>

		<field
			name="date"
			type="calendar"
			label="預約宅配日"
			description="預約宅配日"
			/>

		<field
			name="session"
			type="list"
			label="時段"
			description="時段"
			>
			<option value="daytime">白天皆可 0900-1800</option>
			<option value="morning">早上 0900-1300</option>
			<option value="afternoon">下午 1300-1800</option>
			<option value="night">晚上 1800-2100</option>
			<option value="other">其他</option>
		</field>

		<field
			name="schedule_id"
			type="hidden"
			/>

		<field
			name="sender_id"
			type="sender_list"
			value_field="name"
			label="配送藥師"
			description="配送藥師"
			/>

		<field
			name="weekday"
			type="list"
			label="配送日"
			description="配送日"
			>
			<option value="MON">星期一</option>
			<option value="TUE">星期二</option>
			<option value="WED">星期三</option>
			<option value="THU">星期四</option>
			<option value="FRI">星期五</option>
			<option value="SAT">星期六</option>
			<option value="SUN">星期日</option>
		</field>
	</fields>

	<fieldset
		name="schedules_ps">
		<field
			name="tel_office"
			type="text"
			label="聯絡電話(O)"
			description="聯絡電話(O)"
			/>

		<field
			name="tel_home"
			type="text"
			label="聯絡電話(H)"
			description="聯絡電話(H)"
			/>

		<field
			name="mobile"
			type="text"
			label="手機(M)"
			description="手機(M)"
			/>

		<!-- 存入 prescription 的備註 -->
		<field
			name="note"
			type="textarea"
			label="備註"
			description="備註"
			/>

		<field
			name="note_list"
			type="checkboxes"
			label="註記選項"
			description="註記選項"
			>
			<option value="need_real_book">需確認正本</option>
			<option value="need_breakup">藥品需分包</option>
			<option value="take_it_back">正本已回收</option>
		</field>
	</fieldset>

	<fieldset name="city">
		<field name="city"
			type="sql"
			query="SELECT `id`, `title` FROM #__schedule_cities WHERE published=1"
			key_field="id"
			value_field="title"
			label="縣市"
			description="縣市">
			<option>- 請選擇縣市 -</option>
		</field>
		<field name="area"
			type="sql"
			query="SELECT `id`, `title` FROM #__schedule_areas WHERE published=1"
			key_field="id"
			value_field="title"
			label=""
			description="區域">
			<option>- 請選擇區域 -</option>
		</field>
	</fieldset>
</form>
