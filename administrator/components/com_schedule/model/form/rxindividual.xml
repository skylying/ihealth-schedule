<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="basic"
		align="left"
		horz="true">

		<field name="id"
			type="text"
			label="處方箋編號"
			description="處方箋編號"
			readonly="true"
			/>

		<field name="printed"
			type="hidden"
			/>

		<field name="id_number"
			type="text"
			label="身分證字號"
			description="身分證字號"
			readonly="true"
			/>

		<field name="customer_id"
			type="Customer_List"
			ajaxTask="customers.ajax.json"
			ajaxQuery="filter[customer.type]=individual"
			keyField="id"
			valueField="name"
			minTermLength="1"
			quickadd="true"
			label="客戶姓名"
			description="客戶姓名"
			required="true"
			>
			<option></option>
		</field>

		<field name="member_id"
			type="text"
			label="會員"
			description="會員"
			required="true"
			/>

		<field name="type"
			type="hidden"
			/>

		<field name="customer_name"
			type="hidden"
			/>

		<field name="birth_date"
			type="DateTimepicker"
			label="生日"
			description="生日"
			readonly="true"
			/>

		<field name="received"
			type="radio"
			label="處方箋正本"
			description="處方箋正本"
			class="btn-group"
			default="1"
			>
			<option value="1">已取得</option>
			<option value="0">未取得</option>
		</field>

		<field name="called"
			type="radio"
			label="電聯狀態"
			description="電聯狀態"
			class="btn-group"
			default="1"
			>
			<option value="1">已電聯</option>
			<option value="0">無法聯繫</option>
		</field>

		<field name="hospital_id"
			type="hospital_list"
			label="處方開立醫院"
			description="處方開立醫院"
			>
			<option></option>
		</field>

		<field name="hospital_title"
			type="hidden"
			/>

		<field name="see_dr_date"
			type="DateTimepicker"
			label="就醫日期"
			description="就醫日期"
			required="true"
			/>

		<field name="period"
			type="list"
			label="給藥天數"
			description="給藥天數"
			default="28"
		>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
			<option value="24">24</option>
			<option value="25">25</option>
			<option value="26">26</option>
			<option value="27">27</option>
			<option value="28">28</option>
			<option value="29">29</option>
			<option value="30">30</option>
			<option value="31">31</option>
		</field>

		<field name="times"
			type="list"
			label="可調劑次數"
			description="可調劑次數"
			default="3"
			>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
		</field>

		<field name="method"
			type="list"
			label="處方箋取得方式"
			description="處方箋取得方式"
			>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
			<option value="tmp_no_rx">暫缺正本</option>
		</field>

		<field name="drug"
			type="hidden"
			/>
		<field name="delete_drug"
			type="hidden"
			/>

		<field name="delete_drug"
			type="hidden"
			/>

		<field name="ajax_image1"
			type="ImageUploader"
			image_type="rxindividual"
			upload_extra_data="function(){return {rx_id:jQuery('#jform_id').val()};}"
			label="處方箋圖片 1"
			description="處方箋圖片 1"
			/>

		<field name="ajax_image2"
			type="ImageUploader"
			image_type="rxindividual"
			upload_extra_data="function(){return {rx_id:jQuery('#jform_id').val()};}"
			label="處方箋圖片 2"
			description="處方箋圖片 2"
			/>

		<field name="ajax_image3"
			type="ImageUploader"
			image_type="rxindividual"
			upload_extra_data="function(){return {rx_id:jQuery('#jform_id').val()};}"
			label="處方箋圖片 3"
			description="處方箋圖片 3"
			/>

		<field name="create_addresses"
			type="hidden"
			/>

		<field name="empty_date_1st"
			type="hidden"
			/>

		<field name="empty_date_2nd"
			type="hidden"
			/>
	</fieldset>

	<field name="deliver_nths"
		type="hidden"
		/>

	<fieldset
		name="schedules_ps">
		<field name="tel_office"
			type="text"
			label="聯絡電話(O)"
			description="聯絡電話(O)"
			/>

		<field name="tel_home"
			type="text"
			label="聯絡電話(H)"
			description="聯絡電話(H)"
			/>

		<field name="mobile"
			type="text"
			label="手機(M)"
			description="手機(M)"
			/>

		<!-- 存入 prescription 的備註 -->
		<field name="note"
			type="textarea"
			label="處方箋備註"
			description="跟著處方箋的備註欄位"
			/>

	</fieldset>

	<fieldset name="city">
		<field name="city"
			type="sql"
			query="SELECT `id`, `title` FROM #__schedule_cities WHERE published=1"
			key_field="id"
			value_field="title"
			label="縣市"
			description="縣市">
			<option>- 請選擇縣市 -</option>
		</field>

		<field name="area"
			type="sql"
			query="SELECT `id`, `title` FROM #__schedule_areas WHERE published=1"
			key_field="id"
			value_field="title"
			label=""
			description="區域">
			<option>- 請選擇區域 -</option>
		</field>
	</fieldset>
</form>
