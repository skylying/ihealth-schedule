<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="search">
		<field name="field"
			type="hidden"
			default="*"
			label="JSEARCH_FILTER_LABEL"
			labelclass="pull-left"
			class="input-small"
			>
			<option value="*">JALL</option>
			<option value="rxindividual.title">JGLOBAL_TITLE</option>
			<option value="category.title">JCATEGORY</option>
		</field>

		<field
			name="index"
			type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
			/>

		<!-- For multiple search
		<fieldset name="multisearch">
			<field
				name="rxindividual.title"
				type="text"
				label="Title"
				hint="JSEARCH_FILTER"
				/>

			<field
				name="category.title"
				type="text"
				label="Category"
				hint="JSEARCH_FILTER"
				/>
		</fieldset>
		-->
	</fields>

	<!-- Filter -->
	<fields name="filter">
		<field
			name="see_dr_date_start"
			type="calendar"
			label=""
			description=""
			hint="選擇就醫日期(起)"
			/>

		<field
			name="see_dr_date_end"
			type="calendar"
			label=""
			description=""
			hint="選擇就醫日期(訖)"
			/>

		<field
			name="rxindividual.hospital_id"
			type="Hospital_List"
			label="處方開立醫院"
			description="處方開立醫院"
			onchange="this.form.submit();"
			>
			<option></option>
		</field>

		<field
			name="rxindividual.received"
			type="list"
			label="處方箋狀態"
			description="處方箋狀態"
			onchange="this.form.submit();"
			>
			<option></option>
			<option value="0">已取得</option>
			<option value="1">未取得</option>
		</field>

		<field name="rxindividual.method"
			type="list"
			label="處方箋取得方式"
			description="處方箋取得方式"
			onchange="this.form.submit();"
			>
			<option></option>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="rxindividual.catid, rxindividual.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="rxindividual.catid, rxindividual.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="rxindividual.state ASC">JSTATUS_ASC</option>
			<option value="rxindividual.state DESC">JSTATUS_DESC</option>
			<option value="rxindividual.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="rxindividual.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="category.title ASC">JCATEGORY_ASC</option>
			<option value="category.title DESC">JCATEGORY_DESC</option>
			<option value="rxindividual.access ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="rxindividual.access DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="rxindividual.created_by ASC">JAUTHOR_ASC</option>
			<option value="rxindividual.created_by DESC">JAUTHOR_DESC</option>
			<option value="rxindividual.language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="rxindividual.language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="rxindividual.created ASC">JDATE_ASC</option>
			<option value="rxindividual.created DESC">JDATE_DESC</option>
			<option value="rxindividual.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="rxindividual.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>
