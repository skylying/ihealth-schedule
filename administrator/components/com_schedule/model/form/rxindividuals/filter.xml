<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="search">
		<field name="field"
			type="hidden"
			default="*"
			label="JSEARCH_FILTER_LABEL"
			labelclass="pull-left"
			class="input-small"
			>
			<option value="*">JALL</option>
			<option value="rxindividual.title">JGLOBAL_TITLE</option>
			<option value="category.title">JCATEGORY</option>
		</field>

		<field
			name="index"
			type="text"
			label="JSEARCH_FILTER_LABEL"
			hint="JSEARCH_FILTER"
			/>

		<!-- For multiple search
		<fieldset name="multisearch">
			<field
				name="rxindividual.title"
				type="text"
				label="Title"
				hint="JSEARCH_FILTER"
				/>

			<field
				name="category.title"
				type="text"
				label="Category"
				hint="JSEARCH_FILTER"
				/>
		</fieldset>
		-->
	</fields>

	<!-- Filter -->
	<fields name="filter">
		<field
			name="see_dr_date_start"
			type="calendar"
			label=""
			description=""
			hint="選擇就醫日期(起)"
			/>

		<field
			name="see_dr_date_end"
			type="calendar"
			label=""
			description=""
			hint="選擇就醫日期(訖)"
			/>

		<field
			name="rxindividual.hospital_id"
			type="Hospital_List"
			label="處方開立醫院"
			description="處方開立醫院"
			onchange="this.form.submit();"
			>
			<option>--選擇處方開立醫院--</option>
		</field>

		<field
			name="rxindividual.received"
			type="list"
			label="處方箋狀態"
			description="處方箋狀態"
			onchange="this.form.submit();"
			>
			<option>--選擇處方箋狀態--</option>
			<option value="0">已取得</option>
			<option value="1">未取得</option>
		</field>

		<field name="rxindividual.method"
			type="list"
			label="處方箋取得方式"
			description="處方箋取得方式"
			onchange="this.form.submit();"
			>
			<option>--選擇處方箋取得方式--</option>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>
