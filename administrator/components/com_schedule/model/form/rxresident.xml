<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="institute">
		<field name="institute_id"
			hint="輸入機構名稱"
			type="select2"
			minimumInputLength="2"
			apiUrl="index.php?option=com_schedule&amp;task=institutes.search.json"
			apiQueryKey="filter_search"
			apiValueField="title"
			onChangeCallback="updateDeliveryDay"
			class="input-large"
			label="機構名稱"
			description="機構名稱"
			required="true"
			/>

		<field name="floor"
			type="text"
			hint="ex:2F"
			label="機構樓層"
			description="機構樓層"
			/>
	</fieldset>

	<fieldset name="information">
		<field name="id"
			type="text"
			class="fullwidth"
			label="id"
			description="id"
			readonly="true"
			/>

		<field name="customer_id"
			hint="客戶姓名"
			type="select2"
			minimumInputLength="2"
			apiUrl="index.php?option=com_schedule&amp;task=customer.ajax.json"
			apiQueryKey="filter_search"
			apiValueField="name"
			onChangeCallback="updateIdBirthday"
			allowNew="true"
			class="fullwidth customer-id"
			label="客戶"
			description="客戶"
			required="true"
			/>


		<field name="id_number"
			type="text"
			class="fullwidth idnumber"
			label="身分證字號"
			description="身分證字號"
			/>

		<field name="birth_date"
			type="DateTimePicker"
			hint="選擇日期"
			class="datetimepicker calendarwidth birthday"
			label="生日"
			description="生日"
			/>

		<field name="see_dr_date"
			type="DateTimePicker"
			hint="選擇日期"
			class="datetimepicker calendarwidth seedr"
			label="就醫日期"
			description="就醫日期"
			required="true"
			/>

		<field name="period"
			type="list"
			class="fullwidth period"
			label="給藥天數"
			description="給藥天數"
			default="28"
			required="true"
			>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
			<option value="24">24</option>
			<option value="25">25</option>
			<option value="26">26</option>
			<option value="27">27</option>
			<option value="28">28</option>
			<option value="29">29</option>
			<option value="30">30</option>
			<option value="31">31</option>
		</field>

		<field name="times"
			type="list"
			class="fullwidth times"
			label="可調劑次數"
			description="可調劑次數"
			default="3"
			required="true"
			>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
		</field>

		<field name="deliver_nths"
			type="checkboxes"
			class="fullwidth fullwidth-checkboxes"
			label="處方箋外送次數"
			description="處方箋外送次數"
			default="2nd,3rd"
			required="true"
			>
			<option value="1st">1</option>
			<option value="2nd">2</option>
			<option value="3rd">3</option>
		</field>

		<field name="empty_date_1st"
			type="hidden"
			class="fullwidth emptydate1"
			label="第一次吃完藥日"
			description="第一次吃完藥日"
			/>

		<field name="empty_date_2nd"
			type="hidden"
			class="fullwidth emptydate2"
			label="第二次吃完藥日"
			description="第二次吃完藥日"
			/>

		<field name="method"
			type="list"
			class="fullwidth"
			label="處方箋取得方式"
			description="處方箋取得方式"
			default="paper"
			required="true"
			>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
		</field>

		<field name="fileuploadplaceholder"
			type="textarea"
			class="fullwidth"
			label="上傳檔案欄位"
			description="上傳檔案欄位"
			/>

		<field name="note"
			type="textarea"
			class="fullwidth"
			label="備註"
			description="備註"
			/>
	</fieldset>
</form>
