<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field id="individual_sender_id"
			name="sender_id"
			type="sender_list"
			key_field="id"
			value_field="name"
			label="負責藥師"
			description="負責藥師"
			>
			<option></option>
		</field>

		<field name="customer_id"
			type="select2"
			query="SELECT `id`, `name` FROM #__schedule_customers WHERE id=%s"
			idField="id"
			textField="name"
			apiUrl="index.php?option=com_schedule&amp;task=customers.ajax.json&amp;filter[customer.type]=individual"
			apiQueryKey="q"
			minimumInputLength="1"
			allowClear="true"
			label="散客名稱"
			description="散客名稱"
			class="input-large"
			onchange="function(e, $node) { ScheduleEdit.updateCustomerRelatedInfo($node); }"
			>
			<option></option>
		</field>

		<field name="member_id"
			type="list"
			label="會員名稱"
			description="會員名稱"
			required="true"
			/>

		<field
			name="address_id"
			type="list"
			label="地址"
			class="input-xxlarge"
			required="true"
			/>

		<field name="individual_type"
			type="radio"
			default=""
			class=""
			label="排程類別"
			description="排程類別"
			required="true"
			>
			<option value="collect">收單</option>
			<option value="other">其他</option>
		</field>

		<field name="type"
			type="hidden"
			default="scheduled"
			/>

		<field id="individual_date"
			name="date"
			type="datetimepicker"
			default=""
			format="%Y-%m-%d"
			label="拜訪日期"
			description="拜訪日期"
			dpBindEvent="(function($node)
			{
				$node.on('dp.change', function()
				{
					ScheduleEdit.updateScheduleLink($node, 'individual');
				});
			})"
			/>

		<field name="note"
			type="textarea"
			default=""
			label="備註說明"
			description="備註說明"
			/>

		<field name="task_id"
			type="hidden"
			/>

		<field name="status"
			type="hidden"
			default="scheduled"
			/>
	</fieldset>
</form>
