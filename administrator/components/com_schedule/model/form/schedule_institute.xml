<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field id="institute_sender_id"
			name="sender_id"
			type="sender_list"
			key_field="id"
			value_field="name"
			label="負責藥師"
			description="負責藥師"
			>
			<option></option>
		</field>

		<field name="institute_id"
			type="sql"
			query="SELECT id, short_title FROM #__schedule_institutes"
			key_field="id"
			value_field="short_title"
			default=""
			label="機構名稱"
			description="機構名稱"
			onchange="ScheduleEdit.updateInstituteRelatedInfo(this);"
			>
			<option></option>
		</field>

		<field name="city_title"
			type="text"
			label="縣市"
			description="縣市"
			readonly="true"
			/>

		<field name="area_title"
			type="text"
			label="區域"
			description="區域"
			readonly="true"
			/>

		<field name="address"
			type="text"
			class="input-xlarge"
			label="地址"
			description="地址"
			readonly="true"
			/>

		<field name="institute_type"
			type="radio"
			default=""
			class=""
			label="排程類別"
			description="排程類別"
			required="true"
			>
			<option value="speech">演講</option>
			<option value="discuss">個案討論</option>
			<option value="evaluation">評鑑</option>
			<option value="collect">收單</option>
			<option value="visit">新簽約後拜訪</option>
			<option value="other">其他</option>
		</field>

		<field name="type"
			type="hidden"
			default="scheduled"
			/>

		<field id="institute_date"
			name="date"
			type="calendar"
			default=""
			format="%Y-%m-%d"
			label="拜訪日期"
			description="拜訪日期"
			onchange="ScheduleEdit.updateScheduleLink(this, 'institute');"
			/>

		<field name="note"
			type="textarea"
			default=""
			label="備註說明"
			description="備註說明"
			/>

		<field name="task_id"
			type="hidden"
			/>

		<field name="status"
			type="hidden"
			default="scheduled"
			/>
	</fieldset>
</form>
