<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field id="institute_sender_id"
			name="sender_id"
			type="sender_list"
			key_field="id"
			value_field="name"
			label="負責藥師"
			description="負責藥師"
			>
			<option></option>
		</field>

		<field name="institute_id_selection"
			type="select2"
			class="input-large"
			label="機構名稱"
			description="機構名稱"
			hint="輸入機構名稱"
			onchange="function(e, $node) { ScheduleEdit.updateInstituteRelatedInfo($node); }"
			minimumInputLength="1"
			apiUrl="index.php?option=com_schedule&amp;task=institutes.search.json&amp;show_floor=1"
			apiQueryKey="filter_search"
			query="
				SELECT '%s' AS `id`, CONCAT(`short_title`, ' ', SUBSTRING_INDEX('%s', '-', -1)) AS `short_title`,
					`color_hex`, `delivery_weekday`, `note`, `floor`
				FROM #__schedule_institutes
				WHERE `id` = SUBSTRING_INDEX('%s', '-', 1)
			"
			idField="id"
			textField="short_title"
			/>

		<field name="institute_id"
			type="hidden"
			readonly="true"
			label="機構名稱"
			description="機構名稱"
			/>

		<field name="city_title"
			type="text"
			label="縣市"
			description="縣市"
			readonly="true"
			/>

		<field name="area_title"
			type="text"
			label="區域"
			description="區域"
			readonly="true"
			/>

		<field name="address"
			type="text"
			class="input-xlarge"
			label="地址"
			description="地址"
			readonly="true"
			/>

		<field name="institute_type"
			type="radio"
			default=""
			class=""
			label="排程類別"
			description="排程類別"
			required="true"
			>
			<option value="speech">演講</option>
			<option value="discuss">個案討論</option>
			<option value="evaluation">評鑑</option>
			<option value="collect">收單</option>
			<option value="visit">新簽約後拜訪</option>
			<option value="other">其他</option>
		</field>

		<field name="type"
			type="hidden"
			default="scheduled"
			/>

		<field name="weekday"
			type="hidden"
			default="NULL"
			/>

		<field id="institute_date"
			name="date"
			type="datetimepicker"
			label="拜訪日期"
			description="拜訪日期"
			dpBindEvent="(function($node)
			{
				$node.on('dp.change', function()
				{
					ScheduleEdit.updateScheduleLink($node, 'institute');
				});
			})"
			/>

		<field name="note"
			type="textarea"
			default=""
			label="備註說明"
			description="備註說明"
			/>

		<field name="task_id"
			type="hidden"
			/>

		<field name="status"
			type="hidden"
			default="scheduled"
			/>
	</fieldset>
</form>
