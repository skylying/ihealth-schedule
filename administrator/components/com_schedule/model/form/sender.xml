<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="information"
		align="left"
		horz="true">
		<field name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			/>
		<field name="name"
			type="text"
			label="藥師姓名"
			description="請填入藥師姓名"
			required="true"
			class="input-xlarge required"
			/>

		<field name="user_id"
			type="sql"
			query="SELECT id, name FROM #__users"
			key_field="id"
			value_field="name"
			label="對應系統使用者"
			description="請選擇對應的藥師名稱，如果未新增請先至 joomla 會員管理新增對應藥師帳號"
			default="0"
			class="input-medium">
			<option value="0">非藥師(預設值)</option>
		</field>

		<field name="note"
			type="textarea"
			label="備註"
			description="其它備註"
			filter="raw"
			rows="10"
			class="input-xlarge"
			/>
	</fieldset>

	<!-- For Quick Ajax AddNew -->
	<fieldset name="quickadd">
		<field name="name"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			required=""
			size="50"
			labelclass=""
			class="input-xlarge"
			/>
		<!--<field name="parent_id"
			type="sender_list"
			label="COM_SCHEDULE_PARENT_ITEM"
			description="COM_SCHEDULE_PARENT_ITEM_DESC"
			labelclass=""
			class="input-xlarge inputbox"
			access="true"
		>
			<option>JSELECT</option>
			<option value="1">JLIB_HTML_ADD_TO_ROOT</option>
		</field>-->
	</fieldset>

</form>
