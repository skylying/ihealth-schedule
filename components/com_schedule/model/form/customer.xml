<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field name="id"
			type="text"
			label="客戶編號"
			description=""
			readonly="true"
			/>

		<field name="member_id"
			type="integer"
			label="會員編號"
			description="會員編號"
			required="true"
			/>

		<field name="name"
			type="text"
			label="客戶姓名"
			description="客戶姓名"
			required="true"
			class="input-large required"
			/>

		<field name="id_number"
			type="text"
			label="客戶身份字號"
			description="客戶身份字號"
			/>

		<field name="birth_date"
			type="text"
			label="出生日期"
			description="出生日期"
			/>

		<field name="type"
			type="radio"
			label="客戶類型"
			description="客戶類型"
			class="btn-group btn-group-yesno customertype">
			<option value="resident">住民</option>
			<option value="individual">散客</option>
		</field>

		<field name="hospital"
			type="integer"
			label="開立處方醫院編號"
			description="開立處方醫院編號"
			/>

		<field name="tel_office"
			type="text"
			label="宅配電話(O)"
			description="填入宅配電話"
			/>

		<field name="tel_home"
			type="text"
			label="宅配電話(H)"
			description="填入宅配電話(H)"
			/>

		<field name="mobile"
			type="text"
			label="手機(M)"
			description="填入手機(M)"
			/>

		<field name="note"
			type="textarea"
			label="備註"
			description="備註"
			/>

		<field name="city"
			type="integer"
			label="縣市"
			description="縣市"
			/>

		<field name="area"
			type="integer"
			label="區域"
			description="區域"
			/>
	</fieldset>
</form>
	