<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field name="id"
			type="integer"
			label="處方箋編號"
			readonly="true"
			/>

		<field name="member_id"
			type="integer"
			label="會員編號"
			required="true"
			/>

		<field name="customer_id"
			type="integer"
			label="客戶編號"
			required="true"
			/>

		<field name="hospital_id"
			type="integer"
			label="處方開立醫院"
			/>

		<field name="see_dr_date"
			type="calendar"
			label="就醫日期"
			required="true"
			/>

		<field name="period"
			type="list"
			label="給藥天數"
			default="28"
			required="true"
		>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
			<option value="24">24</option>
			<option value="25">25</option>
			<option value="26">26</option>
			<option value="27">27</option>
			<option value="28">28</option>
			<option value="29">29</option>
			<option value="30">30</option>
			<option value="31">31</option>
		</field>

		<field name="times"
			type="list"
			label="可調劑次數"
			required="true"
			>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
		</field>

		<field name="deliver_nths"
			type="checkboxes"
			label="宅配第幾次 ('1st','2nd','3rd')"
			default="2nd,3rd"
			required="true"
			>
			<option value="1st">1st</option>
			<option value="2nd">2nd</option>
			<option value="3rd">3rd</option>
		</field>

		<field name="method"
			type="list"
			label="處方箋取得方式"
			>
			<option value="fax">傳真</option>
			<option value="line">line</option>
			<option value="form">自行填表</option>
			<option value="file">上傳檔案</option>
			<option value="photo">拍照</option>
			<option value="paper">正本</option>
		</field>

		<field
			name="note"
			type="textarea"
			label="備註"
			/>

		<field name="type"
			type="list"
			label="處方箋類別"
			default="individual"
			>
			<option value="individual">散客</option>
			<option value="resident">住民</option>
		</field>

		<field name="received"
			type="list"
			label="處方箋狀態"
			default="0"
			>
			<option value="0">未取得</option>
			<option value="1">已取得</option>
		</field>

		<field name="called"
			type="list"
			label="是否已外送"
			default="0"
			>
			<option value="0">未電聯</option>
			<option value="1">已電聯</option>
		</field>

		<field name="delivered"
			type="list"
			label="是否已外送"
			default="0"
			>
			<option value="0">否</option>
			<option value="1">是</option>
		</field>
	</fieldset>
</form>
