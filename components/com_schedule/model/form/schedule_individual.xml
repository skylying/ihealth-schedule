<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field name="id"
			type="integer"
			label="宅配編號"
			readonly="true"
			/>

		<field name="date"
			type="calendar"
			label="排程日期"
			required="true"
			/>

		<field name="address_id"
			type="integer"
			label="地址編號"
			required="true"
			/>

		<field name="deliver_nth"
			type="list"
			label="宅配第幾次 ('1st','2nd','3rd')"
			required="true"
			>
			<option value="1st">1st</option>
			<option value="2nd">2nd</option>
			<option value="3rd">3rd</option>
		</field>

		<field name="session"
			type="list"
			label="送藥時段"
			default="daytime"
			required="true"
			>
			<option value="daytime">白天皆可 0900-1800</option>
			<option value="morning">早上 0900-1300</option>
			<option value="afternoon">下午 1300-1800</option>
			<option value="night">晚上 1800-2100</option>
			<option value="other">其他</option>
		</field>

		<field name="tel_office"
			type="text"
			label="宅配電話(O)"
			/>

		<field name="tel_home"
			type="text"
			label="宅配電話(H)"
			/>

		<field name="mobile"
			type="text"
			label="手機"
			/>

		<field name="type"
			type="hidden"
			label="排程類別"
			default="individual"
			/>

		<field name="sorted"
			type="hidden"
			label="是否完成分藥"
			default="0"
			/>

		<field name="ice"
			type="hidden"
			label="是否有冰品"
			default="0"
			/>

		<field name="expense"
			type="hidden"
			label="是否為自費藥品"
			default="0"
			/>

		<field name="price"
			type="hidden"
			label="自費金額"
			default="0"
			/>

		<field name="status"
			type="hidden"
			label="排程狀態"
			default="scheduled"
			/>
	</fieldset>
</form>
