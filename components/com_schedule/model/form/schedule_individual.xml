<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field name="id"
			type="hidden"
			/>

		<field name="task_id"
			type="hidden"
			/>

		<field name="route_id"
			type="hidden"
			/>

		<field name="tel_office"
			type="text"
			label="宅配電話(O)"
			/>

		<field name="tel_home"
			type="text"
			label="宅配電話(H)"
			/>

		<field name="mobile"
			type="text"
			label="手機"
			/>

		<field name="date"
			type="calendar"
			label="排程日期"
			required="true"
			/>

		<field name="session"
			type="list"
			label="送藥時段"
			default="daytime"
			required="true"
			>
			<option value="daytime">白天皆可 0900-1800</option>
			<option value="morning">早上 0900-1300</option>
			<option value="afternoon">下午 1300-1800</option>
			<option value="night">晚上 1800-2100</option>
			<option value="other">其他</option>
		</field>

		<field id="institute_city"
			name="city"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_cities"
			key_field="id"
			value_field="title"
			label="縣市"
			description="縣市"
			readonly="false"
			>
			<option></option>
		</field>

		<field id="institute_area"
			name="area"
			type="sql"
			default=""
			query="SELECT id, title FROM #__schedule_areas"
			key_field="id"
			value_field="title"
			label="區域"
			description="區域"
			readonly="false"
			>
			<option></option>
		</field>

		<field name="address"
			type="text"
			default=""
			class="input-xlarge"
			label="地址"
			description="地址"
			readonly="false"
			/>
	</fieldset>
</form>
